		$('#mainMenudiv').hide();
		$('.menus-icons').click(function(e){
			$(this).next('#mainMenudiv').slideToggle('500');
			$('.overlay-bg, .overlay-content').fadeOut(); //hide the overlay
			e.stopPropagation();
			$('#c-menu--slide-left').removeClass('is-active');
			$('#c-mask').removeClass('is-active');
		});
		
		//Accordian Menu
		$(window).on("load resize",function(){
			if ($(window).width() >= 992) {
				$('.panel-collapse').addClass('collapse in');
				$(".panel-heading").removeClass("collapsed");
			}
		 else {
				$(".panel-heading").addClass("collapsed");
				$('.panel-collapse').removeClass('in');
			}
		});

		//Custom-accrodians
		$('.accrodians-head').click(function (e){
			$(this).next('.item-data').slideToggle('fast').toggleClass('active');
			$(this).toggleClass('current-head');
		});
		$("#expandAll").click(function (){
			$('.item-data').addClass('active').slideDown('fast');
			$('.accrodians-head').addClass('current-head');
		});
		$("#collapseAll").click(function (){
			$('.active').slideUp('fast').removeClass('active');
			$('.accrodians-head').removeClass('current-head');
		});

		//Scroll Animate
		$(window).scroll(function () {
			if ($(this).scrollTop() > 100) {
				$('.scrollup').fadeIn();
			} else {
				$('.scrollup').fadeOut();
			}
		});
		$('.scrollup').click(function () {
		$("html, body").animate({
				scrollTop: 0
			}, 600);
			return false;
		});				
 });
 
 
 
 // START - The slide over menu is coming bottom of the page when transitioning from mobile view to desktop view with out closing the slide over menu
 	// function to close our popups
		function closePopup(){
			$('.overlay-bg, .overlay-content').addClass('hidden-lg hidden-md').removeClass('visible-xs visible-sm'); //hide the overlay
		}
		$(window).on("load resize",function(){
	"use strict";
	if ($(window).width() <= 767) {
		$(document).on('click', '.thumbnail', function(){
			var docHeight = $(document).height(); //grab the height of the page
			$('.overlay-bg').addClass('visible-xs visible-sm').css({'height' : docHeight, 'z-index': 9999}); //display your popup background and set height to the page height
			$('.overlay-bg, .overlay-content').addClass('visible-xs visible-sm');
			var gethtmldyamic = $(this).find('h3').text();
			$('.overlay-head').text(gethtmldyamic);
			var gethtmldyamic = $(this).find('.slideover-content').find('.list-group').html();
			$('.overlay-listcontent').html(gethtmldyamic);
			$("body").animate({scrollTop: 0}, 500);
		});
		
		$(document).on('click', '.overlay-bg', '.close-btn', function(){      
			closePopup();
		});
	}
	else if ($(window).width() > 767)  {
		closePopup();
	}
});
