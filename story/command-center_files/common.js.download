function open_win(target)
{
  var newwinHeight = document.body.clientHeight * 3/4;
  var newwinWidth = document.body.clientWidth * 3/4;
  var leftPos = self.screenLeft;
  var topPos = self.screenTop;
  leftPos = leftPos + 100;
  topPos = topPos + 25;
  newWin = window.open(target,"","height=" + newwinHeight + ",width="+ newwinWidth + ",menubar=yes,scrollbars=yes,toolbar=yes,status=yes, left=" + leftPos + ", top=" + topPos + ", resizable=yes \"");
}
