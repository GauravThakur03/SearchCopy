 function checkwindowSize(){
 "use strict";
 if ($(window).width() <= 992){
		$(document).click( function (e){
		/*For Mobile menus*/
		var container = $('#mainMenudiv');
		var icon = $('.menus-icons');
		
		if (!container.is(e.target) && !icon.is(e.target) && container.has(e.target).length === 0 ) 
			{
				container.hide();
				$('.menus-icons').find('i').removeClass('fa-times').addClass('fa-align-justify');
				$('.menus-icons').removeClass('active');
			}
			
		/*For Siderbar*/
		if (!$('#c-menu--slide-left').is(e.target) && !$('#c-button--slide-left').is(e.target) && $('#c-menu--slide-left').has(e.target).length === 0 ) 
			{
				$('#c-menu--slide-left').removeClass('is-active');
				$('#c-mask').removeClass('is-active');
			}				
	});	
	}
	
	if($(window).width() >= 992){
		$('#c-menu--slide-left').removeClass('is-active');
		$('#c-mask').removeClass('is-active');
	}
}	


$(window).on('load resize',function(){
		"use strict";
		checkwindowSize();
});
			